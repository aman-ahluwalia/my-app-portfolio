<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E3F2FD">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MY NANODEGREE APPS!"
        android:id="@+id/nano_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:textColor="#1A237E" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify_button"
        android:textSize="18dp"
        android:background="#F08C35"
        android:layout_below="@+id/nano_title"
        android:layout_alignRight="@+id/nano_title"
        android:layout_alignEnd="@+id/nano_title"
        android:layout_marginRight="146dp"
        android:layout_marginEnd="146dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scores_button"
        android:textSize="18dp"
        android:background="#F08C35"
        android:layout_alignTop="@+id/spotify_button"
        android:layout_alignLeft="@+id/nano_title"
        android:layout_alignStart="@+id/nano_title"
        android:layout_marginLeft="126dp"
        android:layout_marginStart="126dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library_button"
        android:background="#F08C35"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/spotify_button"
        android:layout_alignStart="@+id/spotify_button"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER APP"
        android:id="@+id/build_big_button"
        android:textSize="18dp"
        android:background="#F08C35"
        android:layout_above="@+id/reader_button"
        android:layout_alignLeft="@+id/scores_button"
        android:layout_alignStart="@+id/scores_button"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/reader_button"
        android:background="#F08C35"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/library_button"
        android:layout_alignLeft="@+id/library_button"
        android:layout_alignStart="@+id/library_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstone_button"
        android:background="#B71C1C"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/reader_button"
        android:layout_alignLeft="@+id/build_big_button"
        android:layout_alignStart="@+id/build_big_button" />
</RelativeLayout>